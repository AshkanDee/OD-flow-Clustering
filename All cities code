objfun_list <- list()

for (city_id in names(moo_clusters)) {

  df <- moo_clusters[[city_id]]
  u  <- direction_vectors[[city_id]]

  objfun_list[[city_id]] <- function(x_cont) {
    x_bin <- as.integer(x_cont > 0.5)
    eval_solution(x_bin, df, u)
  }
}
