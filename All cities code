  cs <- moo_clusters[[city_id]]

  v <- as.matrix(cs[, c("mean_dx", "mean_dy")])
  norms <- sqrt(rowSums(v^2))
  norms[norms == 0] <- 1
  u <- v / norms

  S <- u %*% t(u)
  diag(S) <- NA

  direction_vectors[[city_id]]   <- u
  direction_similarity[[city_id]] <- S
}
